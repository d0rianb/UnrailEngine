{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "baseUrl": ".",
        "lib": ["webworker", "es2017", "scripthost", "DOM"],
        "skipLibCheck": true,
        "allowJs": true,
        "strict": false,
        "sourceMap": false,
        "importHelpers": true,
        "isolatedModules": false,
        "noEmit": false,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "./dist/types",
        "paths": {
            "@/*": ["./src/*"],
            "@root/*": ["./*"],
            "@style/*": ["./style/*"],
            "@resources/*": ["./resources/*"]
        }
    },
    "include": ["./src"],
    "exclude": ["./node_modules"],
    "typedocOptions": {
        "name": "unrail-engine",
        "entryPoints": ["src/index.ts"],
        "media": "resources/logo",
        "readme": false,
        "theme": "minimal"
    }
}